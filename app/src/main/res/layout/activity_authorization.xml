<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corn.collus.mstdnclient.activities.AuthorizationActivity">

    <TextView
        android:id="@+id/auth_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/auth_edit_text"
        app:layout_constraintRight_toLeftOf="@+id/auth_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/auth_edit_text"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"

        android:text="サーバー:"/>

    <EditText
        android:labelFor="@+id/auth_edit_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/auth_edit_text" />

    <Button
        android:id="@+id/auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/auth_edit_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/auth_edit_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/auth_edit_text"

        android:text="接続" />

</android.support.constraint.ConstraintLayout>
